{
  "name": "The Clock",
  "version": "1.0",
  "description": "The clock which shows time and date quickly. It has background images correspond to the periods of a day.",
  "permissions": [
    "declarativeContent"
  ],
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo/date-time-16.png",
      "32": "images/logo/date-time-32.png",
      "48": "images/logo/date-time-48.png",
      "128": "images/logo/date-time-128.png"
    }
  },
  "icons": {
    "16": "images/logo/date-time-16.png",
    "32": "images/logo/date-time-32.png",
    "48": "images/logo/date-time-48.png",
    "128": "images/logo/date-time-128.png"
  }
}