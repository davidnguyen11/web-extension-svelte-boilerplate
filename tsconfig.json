{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*",
    "src/node_modules/**/*",
    "./jest-setup.js"
  ],
  "exclude": [
    "node_modules/*",
  ],
  "compilerOptions": {
    "rootDir": "src",
    "isolatedModules": false,
    "typeRoots": [
      "node_modules/@types",
    ],
    "types": [
      "jest",
      "node",
      "svelte",
      "@testing-library/jest-dom"
    ]
  },
}